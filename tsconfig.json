{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "ES2020"],
        "moduleResolution": "bundler",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "types": ["vitest/globals", "node"]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
